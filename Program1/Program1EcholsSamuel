.data
	numberToGuessPrompt: .asciiz "\nEnter a number: "
	enterGuessPrompt: .asciiz "\nEnter your guess: "
	correctPrompt: .asciiz "\nCorrect!"
	higherPrompt: .asciiz "\nYour guess was too high. Try again!"
	lowerPrompt: .asciiz "\nYour guess was too low. Try again!"
.macro exit
li $v0, 10
syscall
.end_macro exit

.text
.main:			
	li $v0, 4
	la $a0, numberToGuessPrompt
	syscall
	
	li $v0, 5
	syscall
	move $s0, $v0
	
	j enter_guess

enter_guess:
	li $v0, 4
	la $a0, enterGuessPrompt
	syscall
	
	li $v0, 5
	syscall
	move $s1, $v0
	
	beq $s0, $s1, correct
	bgt $s0, $s1, too_low
	blt $s0, $s1, too_high
	
correct:
	li $v0, 4
	la $a0, correctPrompt
	syscall
	exit	

too_low:
	li $v0, 4
	la $a0, lowerPrompt
	syscall
	j enter_guess
	
too_high:
	li $v0, 4
	la $a0, higherPrompt
	syscall
	j enter_guess
